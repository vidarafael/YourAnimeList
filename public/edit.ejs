<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  
  <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@700&display=swap" rel="stylesheet">
  <title>YourAnimeList</title>
</head>
<body>

  <header>
    <div class="div-header">
      <img class="img-header-1" src="/Assets/cloud.png" alt="Imagem Akatsuki">
      <h1 class="h1-header"><span class="span-header">Your</span> Anime <span class="span-header">List</span></h1>
      <img class="img-header-2" src="/Assets/cloud.png" alt="Imagem Akatsuki invertida">
    </div>

    <div class="div-text-header">
      <span> Editado de Hoje: <span class="title-edit"><%=body.title%></span></span>
    </div>
  </header>

  <main>
    <div class="content-add">
      <div class="form-content">
        <div class="image-anime-edit">
          <img src="<%=body.image%>" alt="No-Image">
        </div>
        <form action="/edit/<%=body.id%>" method="POST">
          <div class="form-group-edit">
            <label class="spanForm" for="title"><span class="material-icons">subtitles</span> Titulo</label>
            <div class="div-input-edit">
              <input onfocus="modificaLabel(this)" onblur="voltaLabel(this)" class="input-edit" type="text" name="title" id="title" value="<%=body.title%>">
              <button type="button" class="btn-clear"><span class="material-icons">clear</span></button>
            </div>
          </div>
          <div class="form-group-edit">
            <label class="spanForm" for="description"><span class="material-icons">description</span> Descrição</label>
            <div class="div-input-edit">
              <input onfocus="modificaLabel(this)" onblur="voltaLabel(this)" class="input-edit" type="text" name="description" id="description" value="<%=body.description%>">
              <button type="button" class="btn-clear"><span class="material-icons">clear</span></button>
            </div>
            </div>
          <div class="form-group-edit">
            <label class="spanForm" for="image"><span class="material-icons">image</span> Imagem</label>
            <div class="div-input-edit">
              <input onfocus="modificaLabel(this)" onblur="voltaLabel(this)" class="input-edit" type="text" name="image" id="image" value="<%=body.image%>">
              <button type="button" class="btn-clear"><span class="material-icons">clear</span></button>
            </div>  
          </div>
          <div>
            <button type="submit" class="btn-save-edit">Salvar<span class="material-icons">save</span></button>
          </div>
        </form>
      </div>
    </div>


  </main>

  <script>
    const buttonsClear = document.querySelectorAll(".btn-clear")

    buttonsClear.forEach(function(button) {
      button.addEventListener("click", function() {
        this.previousElementSibling.value = ""
      })
    })

    function modificaLabel(element) {
		  element.parentElement.previousElementSibling.classList.add("labelred")
	  }

   function voltaLabel(element) {
    element.parentElement.previousElementSibling.classList.remove("labelred")
    }
  </script>
</body>
</html>


